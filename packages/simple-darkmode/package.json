{
    "name": "@simple-web-utilities/simple-darkmode",
    "version": "1.0.1",
    "description": "A simple interface for changing the color scheme of a website.",
    "type": "module",
    "main": "dist/simple-darkmode.umd.js",
    "module": "dist/simple-darkmode.js",
    "style": "dist/simple-darkmode.css",
    "types": "dist/simple-darkmode.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/simple-darkmode.js",
            "require": "./dist/simple-darkmode.umd.js",
            "default": "./dist/simple-darkmode.umd.js"
        },
        "./css": {
            "import": "./dist/simple-darkmode.css",
            "require": "./dist/simple-darkmode.css",
            "default": "./dist/simple-darkmode.css"
        }
    },
    "scripts": {
        "build": "tsc && vite build",
        "dev": "tsc && vite build --config vite.config.dev.js && vite --host"
    },
    "browserslist": [
        "> 3%",
        "last 2 versions"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vigoren/simple-web-utilities.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "toggle",
        "css"
    ],
    "author": "Dean Vigoren (Vigorator)",
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://github.com/vigoren/simple-web-utilities/issues"
    },
    "homepage": "https://github.com/vigoren/simple-web-utilities/packages/simple-darkmode#readme"
}
