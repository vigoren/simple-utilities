{
  "name": "@simple-utilities/simple-animation",
  "version": "0.1.0",
  "description": "A simple animation library for CSS and JS/TS projects.",
  "type": "module",
  "main": "dist/simple-animation.umd.js",
  "module": "dist/simple-animation.js",
  "style": "dist/simple-animation.css",
  "exports": {
    ".": {
      "import": "./dist/simple-animation.js",
      "require": "./dist/simple-animation.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run build:dev && vite --host",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --config vite.config.dev.js"
  },
  "browserslist": [
    "> 3%",
    "last 2 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigoren/simple-animation.git"
  },
  "keywords": [
    "animation",
    "css",
    "javascript",
    "typescript"
  ],
  "author": "Dean Vigoren (Vigorator)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/vigoren/simple-animation/issues"
  },
  "homepage": "https://github.com/vigoren/simple-animation#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "cssnano-preset-advanced": "^6.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "postcss-prefixer": "^3.0.0",
    "prettier": "^3.0.0",
    "sass": "^1.64.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}
